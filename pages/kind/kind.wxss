.container{
  width: 100%;
  display: flex;
  flex-direction: row;
}

.menu{
  width: 20%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
  background-color: #4ECE59;
}

.menu .classtype{
  margin: 16rpx 0;
}

.now{
  background-color: #4ECE59;
}

.menu text{
  color: white;
  font-weight: 500;
}

.menu text{
  margin-top: 10rpx;
  margin-bottom: 36rpx;
}

.list{
  width:80%;
  display: flex;
  flex-direction: column;
}

.list .productList{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.productList .info{
  width: 100%;
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  margin-left: 50rpx;
}

image{
  width: 400rpx;
  margin: 20rpx 20rpx;
}